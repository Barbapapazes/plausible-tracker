{
  "compilerOptions": {
    "target": "ESNext",
    // Lower version for better compatibility
    "module": "ES2015",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
